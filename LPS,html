         <div id="result1"></div>
            <script>
             function upload1() {
             if (document.querySelector("input[type=file][id=a1]").files[0]){
             let input = document.querySelector("input[type=file][id=a1]");
             if (input.files && input.files[0]) {
             var reader = new FileReader();

             reader.onload = function(e) {
             display(e.target.result);
              }

             reader.readAsDataURL(input.files[0]);
             }
             } 
             }
             function display(res) {
             let img = document.createElement("IMG");
             img.src=res;
             img.width=125
             img.height=100
             document.querySelector("#result1").appendChild(img);
             }
             </script>




 <div id="result2"></div>
